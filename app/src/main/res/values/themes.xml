<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizForFun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="textInputStyle">@style/editTextLayoutStyle</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="editTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/edit_text_bg</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_corner_radius</item>
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/peach</item>
    </style>

    <style name="edtTextInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/peach</item>
        <item name="hintTextColor">@color/peach</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardViewStyle" >
        <item name="cardCornerRadius">8dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <style name="categoryHeadingTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_heading">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_value_heading">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/peach</item>
    </style>


    <style name="text_radio_button_answer">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/peach</item>
    </style>


    <style name="btnStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_bg_color</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="smallBtnStyle" parent="btnStyle">
        <item name="cornerRadius">@dimen/btn_small_radius</item>
        <item name="android:layout_height">@dimen/btn_small_height</item>
    </style>

    <style name="cancelBtnStyle" parent="smallBtnStyle">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="headingTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

</resources>